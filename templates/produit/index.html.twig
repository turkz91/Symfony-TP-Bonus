{% extends 'base.html.twig' %}

{% block title %}Eni Ench√®res - Produits{% endblock %}

{% block body %}
    <h1>Liste des Produits</h1>
    {% if produits is defined %}
        <div class="row row-cols-md-3 g-5 mb-4" id="wish_list">
            {% for produit in produits %}
                <div class="col">
                    <a href="{{ path('produit_details' , {'id' : produit.id } ) }}">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="text-center">{{ produit.label}} - {{ produit.category.label }}</h5>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <h3> Pas d'article</h3>
    {% endif %}
{% endblock %}
